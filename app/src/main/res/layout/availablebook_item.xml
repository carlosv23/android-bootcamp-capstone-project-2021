<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/availableBook_itemCard"
    >

    <ImageView
        android:id="@+id/cypto_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/btc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/min_amount_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text=".003 mxn"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@+id/cypto_imageView"
        app:layout_constraintTop_toTopOf="@+id/cypto_imageView" />

    <TextView
        android:id="@+id/max_amount_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="1000.00 mxn"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@+id/cypto_imageView"
        app:layout_constraintTop_toBottomOf="@+id/min_amount_text" />

    <TextView
        android:id="@+id/min_price_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text=".003 mxn"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@+id/min_amount_text"
        app:layout_constraintTop_toTopOf="@+id/cypto_imageView" />

    <TextView
        android:id="@+id/max_price_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="1000.00 mxn"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@+id/max_amount_text"
        app:layout_constraintTop_toBottomOf="@+id/min_price_text" />

    <TextView
        android:id="@+id/min_value_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text=".003 mxn"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@+id/min_price_text"
        app:layout_constraintTop_toTopOf="@+id/cypto_imageView" />

    <TextView
        android:id="@+id/max_value_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="1000.00 mxn"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@+id/max_price_text"
        app:layout_constraintTop_toBottomOf="@+id/min_price_text" />


</androidx.constraintlayout.widget.ConstraintLayout>