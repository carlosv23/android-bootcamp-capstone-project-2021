<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/cardview_list"
    android:layout_height="150dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/availableBook_itemCard"
        >

        <ImageView
            android:id="@+id/cypto_imageView"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginStart="@dimen/margin_start_text_item_list"
            android:contentDescription="@string/cryptoImageDetails"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/min_amount_text"
            style="@style/number_green"

            tools:text=".003 mxn"
            app:layout_constraintStart_toEndOf="@+id/cypto_imageView"
            app:layout_constraintTop_toTopOf="@+id/cypto_imageView" />

        <TextView
            android:id="@+id/max_amount_text"
            style="@style/number_red"
            app:layout_constraintBottom_toBottomOf="@+id/cypto_imageView"
            app:layout_constraintStart_toEndOf="@+id/cypto_imageView"
            app:layout_constraintTop_toBottomOf="@+id/min_amount_text"
            app:layout_constraintVertical_bias="0.318"
            tools:text="1000.00 mxn" />

        <TextView
            android:id="@+id/min_price_text"
            style="@style/number_green"
            tools:text=".003 mxn"
            app:layout_constraintStart_toEndOf="@+id/min_amount_text"
            app:layout_constraintTop_toTopOf="@+id/cypto_imageView" />

        <TextView
            android:id="@+id/max_price_text"
            style="@style/number_red"
            app:layout_constraintBottom_toBottomOf="@+id/cypto_imageView"
            app:layout_constraintStart_toEndOf="@+id/max_amount_text"
            app:layout_constraintTop_toBottomOf="@+id/min_price_text"
            tools:text="1000.00 mxn" />

        <TextView
            android:id="@+id/min_value_text"
            style="@style/number_green"
            tools:text=".003 mxn"
            app:layout_constraintStart_toEndOf="@+id/min_price_text"
            app:layout_constraintTop_toTopOf="@+id/cypto_imageView" />

        <TextView
            android:id="@+id/max_value_text"
            style="@style/number_red"
            app:layout_constraintBottom_toBottomOf="@+id/cypto_imageView"
            app:layout_constraintStart_toEndOf="@+id/max_price_text"
            app:layout_constraintTop_toBottomOf="@+id/min_price_text"
            tools:text="1000.00 mxn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


