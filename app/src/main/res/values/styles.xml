<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_list_size</item>
    </style>

    <style name="number_green">
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_width">@dimen/width_text_item_list</item>
        <item name="android:layout_height">@dimen/height_text_item_list</item>
        <item name="android:layout_marginStart">@dimen/margin_start_text_item_list</item>
    </style>

    <style name="number_red">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_width">@dimen/width_text_item_list</item>
        <item name="android:layout_height">@dimen/height_text_item_list</item>
        <item name="android:layout_marginStart">@dimen/margin_start_text_item_list</item>
        <item name="android:layout_marginTop">@dimen/margin_start_text_item_list</item>
    </style>

    <style name="order_list_text_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/order_list_text_title_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="order_list_text_value">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/order_list_text_value_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="details_text">
        <item name="android:textSize">@dimen/details_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="cardview_list">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/title_list_size</item>
    </style>
</resources>